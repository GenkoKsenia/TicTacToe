using namespace std;


void vvod(const char* filename, int mas)
{
    ofstream fout(filename, ios::binary | ios::app);  //файловая переменная для работы с информацией
    if (!fout)
        cout << "Error";
	else fout.write((char*)&mas, sizeof (int));  //запись элементов в файл
    fout.close();
}

void vivod(const char* filename, int mas1)
{
    ifstream in(filename, ios::binary);
	in.read((char*)&mas1, sizeof (int));
    in.close();
}

int main()
{
	setlocale(LC_ALL, "Russian");

	int kkk;

	const char* filename = "first.bin";


	kkk=33;
	vvod(filename, kkk);


	int m;
    ifstream f(filename, ios::binary | ios::in);

	f.read((char*)&m, sizeof(int));
	int mmm=m;

    f.close();

}



