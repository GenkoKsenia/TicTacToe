void __fastcall TForm4::Button2Click(TObject *Sender)
{
	stud x;
	//string a = StrToChar(Edit1->Text);
	 char f;
	 f='f';

	Edit1->Text=(AnsiString)f;
	f=(AnsiString)Edit1->Text;

	//x.name=Edit1->Text;
	//x.group=Edit1->Text;


	ofstream fout(filename, ios::binary | ios::app);  //файловая переменная для работы с информацией
	if (!fout)
		const char* filename = "accounts.bin";
	fout.write((char*)&f, sizeof (char));  //запись элементов в файл
	fout.close();
}
